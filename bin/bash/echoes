#!/bin/bash -e
if [ "$0" == "$BASH_SOURCE" ]; then
    1>&2 echo "script $0 is not sourced"
    false
fi

[[ $(type -t echo_ok) == 'function' ]] && return

source ~/bin/bash/color_prompt

if [ "$color_prompt" = yes ]; then

    echo_err  () { 1>&2 echo -e "${C_WHITE}ERROR: $*${C_RST}"   ; }
    echo_fatal() { 1>&2 echo -e "${C_RED}FATAL: $*${C_RST}"     ; }
    echo_warn () { 1>&2 echo -e "${C_YELLOW}WARNING: $*${C_RST}"; }
    echo_info () { 1>&2 echo -e "${C_CYAN}INFO: $*${C_RST}"     ; }
    echo_ok   () { 1>&2 echo -e "${C_GREEN}$*${C_RST}"          ; }

else

    echo_err  () { 1>&2 echo "ERROR: $*"  ; }
    echo_fatal() { 1>&2 echo "FATAL: $*"  ; }
    echo_warn () { 1>&2 echo "WARNING: $*"; }
    echo_info () { 1>&2 echo "INFO: $*"   ; }
    echo_ok   () { 1>&2 echo "$*"         ; }

fi
