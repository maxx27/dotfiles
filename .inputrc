# See https://www.gnu.org/software/bash/manual/bashref.html#Readline-Arguments
# for available parameters

set keymap emacs
# arrow up
"\e[A":history-search-backward
# arrow down
"\e[B":history-search-forward

# bindings in insert mode
set keymap vi-insert
"\e.":yank-last-arg
"\e_":yank-last-arg

# show mode at the beginning of prompt
set show-mode-in-prompt off
# use vi mode by default
set editing-mode emacs
